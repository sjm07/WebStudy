<?xml version="1.0" encoding="utf-8" ?>
<log4net>
  <root>
    <!--日志等级（由低到高）:ALL DEBUG INFO WARN ERROR FATAL OFF-->
    <level value="INFO" />
    <appender-ref ref="ErrorLog" />
    <appender-ref ref="InfoLog" />
  </root>

  <appender name="ErrorLog" type="log4net.Appender.RollingFileAppender">
    <param name="File" value="ILogs\ErrorLogs\" />
    <param name="AppendToFile" value="true" />
    <param name="MaxSizeRollBackups" value="10" />
    <param name="StaticLogFileName" value="false" />
    <param name="DatePattern" value="yyyy-MM/dd-HH-mm&quot;.txt&quot;" />
    <param name="RollingStyle" value="Date" />
    <layout type="log4net.Layout.PatternLayout">
      <param name="ConversionPattern" value="[%d] [%t] %-5p Notice:- %m %n" />
    </layout>
    <filter type="log4net.Filter.LevelRangeFilter">
      <levelMin value="ERROR" />
      <levelMax value="FATAL" />
    </filter>
  </appender>

  <appender name="InfoLog" type="log4net.Appender.RollingFileAppender">
    <param name="File" value="ILogs\InfoLogs\" />
    <param name="AppendToFile" value="true" />
    <param name="MaxSizeRollBackups" value="10" />
    <param name="StaticLogFileName" value="false" />
    <param name="DatePattern" value="yyyy-MM/dd-HH-mm&quot;.txt&quot;" />
    <param name="RollingStyle" value="Date" />
    <layout type="log4net.Layout.PatternLayout">
      <param name="ConversionPattern" value="[%d] [%t] %-5p Notice:- %m %n" />
    </layout>
    <filter type="log4net.Filter.LevelRangeFilter">
      <levelMin value="INFO" />
      <levelMax value="INFO" />
    </filter>
  </appender>
</log4net>